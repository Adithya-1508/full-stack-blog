<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>


<body>
    <!-- We need to use minus sign whenever use include -->
    <%- include('./partials/nav.ejs') %>

    <div class="blogs content">
        <h2>All Blogs</h2>

        <!-- ejs syntax to display the data from the server files -->

        <% if(blogs.length > 0){%>
            <% blogs.forEach(blog => {%>
                <a class="single" href="/blogs/<%= blog._id %>">
                    <h3 class="title"><%= blog.title %></h3>
                    <p class="snippet"><%= blog.snippet %></p>
                  </a>
                <% })%>
        <% } else { %>
            <p>There are no blogs to display sorry....</p>
        <% } %>        
    </div>

    <%- include('./partials/footer.ejs') %>
</body>

</html>